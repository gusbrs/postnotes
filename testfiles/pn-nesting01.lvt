% Ensure the same font across check engines
\usepackage[OT1]{fontenc}
\renewcommand\rmdefault{cmr}
\renewcommand\sfdefault{cmss}
\renewcommand\ttdefault{cmtt}

\usepackage{postnotes}
\AddToHook{cmd/chapter/before}{%
  \postnotesection{\section*{Notes to chapter \pnthechapternextnote}}}
\counterwithin*{postnote}{chapter}

\usepackage{hyperref}

\begin{document}

\chapter{First chapter}

\textsuperscript{avoid font warning}

\START

\BEGINTEST{Notes: First chapter}
Foo.%
\setbox0=\hbox{\postnote{Foo note.}}%
\showbox0
\box0

Bar.%
\setbox0=\hbox{\postnote{Bar note.}}%
\showbox0
\box0

Nest.%
\setbox0=\hbox{\postnote{A note.\postnote{A nested note.\postnote{A double
        nested note.}}}}%
\showbox0
\box0
\ENDTEST

\OMIT

\chapter{Second chapter}

\TIMO

\BEGINTEST{Notes: Second chapter}
Baz.%
\setbox0=\hbox{\postnote{Baz note.}}%
\showbox0
\box0

Boo.%
\setbox0=\hbox{\postnote{Boo note.}}%
\showbox0
\box0

Nest.%
\setbox0=\hbox{\postnote{B note.\postnote{B nested note.\postnote{B double
        nested note.}}}}%
\showbox0
\box0
\ENDTEST

\OMIT

\cleardoublepage{}

\TIMO

\BEGINTEST{Print}
\showoutput
\AddToHookNext{postnotes/print/begin}{\postnotesection{\section*{Nested notes}}}
\setcounter{postnote}{0}
\renewcommand{\thepostnote}{\Alph{postnote}}
\printpostnotes
\newpage
\ENDTEST

\BEGINTEST{Print nested}
\showoutput
\AddToHookNext{postnotes/print/begin}{\postnotesection{\section*{Double nested notes}}}
\setcounter{postnote}{0}
\renewcommand{\thepostnote}{\roman{postnote}}
\renewcommand{\pntitle}{Nested notes}
\printpostnotes
\newpage
\ENDTEST

\BEGINTEST{Print double nested}
\showoutput
\renewcommand{\pntitle}{Double nested notes}
\printpostnotes
\newpage
\ENDTEST

\OMIT

\end{document}
